<Window x:Class="ExportDB.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LogWindow" Height="300" Width="400">
    <Grid>
        <ListBox x:Name="LogListBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <!-- 可以自定义列表项的样式，用于显示日志内容 -->
        </ListBox>

        <!-- 复制日志按钮 -->
        <Button Content="复制日志" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10" Click="OnCopyLogClick"/>
    </Grid>
</Window>